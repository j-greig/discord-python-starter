# Discord Bot Token used for authenticating your bot
BOT_TOKEN=

# Bot prompt: use "prompt.md" to load from file, or an inline prompt string
#BOT_PROMPT=prompt.md
BOT_PROMPT=You are a helpful dog who replies only in woofs

# Name of the bot in Discord, also used to identify the Docker container name
BOT_NAME=Dog

# Optional: Bot name variants for relevant_message() detection (comma-separated)
BOT_NAME_VARIANTS=doggo,pup

# Optional: Topic keywords for relevant_message() detection (comma-separated)  
BOT_TOPICS=treats,walkies,food,lampposts

# Optional: Enable few-shot examples from examples.json file (default: false)
#USE_EXAMPLES=true

# Optional: Custom examples file path (default: examples.json)
#EXAMPLES_FILE=examples.dogtraining.json

# Optional: Enable debug logging to JSON files (default: false)
#DEBUG_LOGGING=true

# Name of your Application in Honcho
APP_NAME=

# Name of the Language Model you're using via openrouter
MODEL_NAME=
# The API key for openrouter
MODEL_API_KEY=

# The URL of the Honcho server
HONCHO_URL=

# The API key for the Honcho server
HONCHO_API_KEY=

# Discord Python Starter - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Discord Bot Token (from Discord Developer Portal)
BOT_TOKEN=your_discord_bot_token_here

# API Provider: anthropic, openai, or openrouter
API_PROVIDER=anthropic

# Application name for Honcho (unique identifier)
APP_NAME=my-discord-agent

# =============================================================================
# API CREDENTIALS (choose based on API_PROVIDER)
# =============================================================================

# For Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# For OpenAI
# OPENAI_API_KEY=your_openai_api_key_here

# For OpenRouter
# OPENAI_API_KEY=your_openrouter_api_key_here
# OPENAI_BASE_URL=https://openrouter.ai/api/v1

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# LLM model to use for responses
MODEL_NAME=claude-3-5-sonnet-20241022

# Maximum tokens for responses
MAX_TOKENS=1024

# Enable Anthropic prompt caching (saves ~50% on tokens)
ENABLE_PROMPT_CACHING=true

# =============================================================================
# ENTHUSIASM SYSTEM
# =============================================================================

# Minimum enthusiasm score (0-9) required to respond
ENTHUSIASM_THRESHOLD=5

# Model to use for enthusiasm scoring (use a fast, cheap model)
ENTHUSIASM_MODEL=claude-3-haiku-20240307

# Enable debug logging for enthusiasm system
ENTHUSIASM_DEBUG=true

# Directory for structured enthusiasm logs
ENTHUSIASM_LOG_DIR=logs/enthusiasm

# Enable context caching for performance
ENTHUSIASM_CONTEXT_CACHE=true

# =============================================================================
# BOT IDENTITY & BEHAVIOR
# =============================================================================

# Bot name (should match Discord username)
BOT_NAME=Assistant

# Comma-separated name variants the bot responds to
BOT_NAME_VARIANTS=ai,bot,helper,assistant

# Comma-separated topics the bot is knowledgeable about
BOT_TOPICS=help,question,code,debug,programming

# Comma-separated bot skills/capabilities
BOT_SKILLS=coding,debugging,explaining,helping

# Bot personality (or use PERSONALITY_FILE for longer descriptions)
BOT_PERSONALITY="A helpful and curious assistant who enjoys solving problems"
# PERSONALITY_FILE=personality.txt

# System prompt (or use SYSTEM_PROMPT_FILE for longer prompts)
SYSTEM_PROMPT="You are a helpful AI assistant in a Discord server. Be concise and friendly."
# SYSTEM_PROMPT_FILE=system_prompt.txt

# Base conversation context file
BASE_CONTEXT_FILE=base_context.json

# =============================================================================
# RATE LIMITING & PERFORMANCE
# =============================================================================

# Global rate limit (messages per minute)
RATE_LIMIT_PER_MINUTE=10

# Custom rate limit message
RATE_LIMIT_MESSAGE="‚è∞ Please wait before asking again - I need a moment to recharge!"

# Per-channel rate limit configuration file
# RATE_LIMIT_CONFIG_FILE=rate_limits.json

# Add natural conversation delays
RANDOM_DELAY_ENABLED=true
MIN_DELAY_SECONDS=1.0
MAX_DELAY_SECONDS=3.0

# =============================================================================
# BOT STATUS COORDINATION
# =============================================================================

# Enable multi-bot awareness and coordination
BOT_STATUS_COORDINATION=true

# Cache duration for bot status checks (seconds)
STATUS_CHECK_CACHE_SECONDS=30

# Include bots with DND status in context
MENTION_DO_NOT_DISTURB_BOTS=false

# Include offline bots in context
MENTION_OFFLINE_BOTS=false

# =============================================================================
# DISPLAY & DEBUGGING
# =============================================================================

# Show verbose reasoning in Discord messages
VERBOSE_REASONING=false

# Show recent message history in verbose output
SHOW_RECENT_MESSAGES=false

# Enable debug logging
DEBUG_LOGGING=false

# =============================================================================
# DISCORD CONTEXT
# =============================================================================

# Include offline users in Discord context
INCLUDE_OFFLINE_USERS=false

# Enable debug logging for Discord context
DISCORD_CONTEXT_DEBUG=false

# =============================================================================
# ADVANCED OPTIONS
# =============================================================================

# Development mode
# DEV_MODE=false

# Use example messages for testing
# USE_EXAMPLES=false
# EXAMPLES_FILE=examples.json

# Known bot IDs (comma-separated Discord user IDs)
# KNOWN_BOT_IDS=123456789,987654321